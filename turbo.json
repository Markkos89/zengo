{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "artifacts/**",
        "cache/**",
        "typechain-types/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {},
    "add-component": {},
    "contracts:node": {},
    "contracts:build": {
      "dependsOn": ["^build"],
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "contracts:deploy": {},
    "run-node": {}
  }
}
